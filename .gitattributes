# Auto detect text files and normalize line endings to LF
* text=auto

# Rust source files
*.rs text eol=lf
*.toml text eol=lf
*.lock text eol=lf

# Documentation
*.md text eol=lf
*.txt text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.json text eol=lf

# Shell scripts
*.sh text eol=lf
*.bash text eol=lf
*.zsh text eol=lf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.zip binary
*.tar binary
*.gz binary

# Proto files
*.proto text eol=lf

# SQL
*.sql text eol=lf

# CSV
*.csv text eol=crlf

# Windows specific
*.bat text eol=crlf
*.cmd text eol=crlf
*.ps1 text eol=crlf
